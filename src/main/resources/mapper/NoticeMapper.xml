<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.example.shoppingmall.notice.dao.NoticeDao">


    <!-- 1. 공지사항 목록 조회 -->
    <select id="findAll" resultType="com.example.shoppingmall.notice.domain.Notice">
        SELECT *
        FROM notice
        ORDER BY is_pinned DESC, created_at DESC
    </select>

        <!--2. 공지사항 상세 조회 -->
    <select id="findById" parameterType="long" resultType="com.example.shoppingmall.notice.domain.Notice">
        SELECT *
        FROM notice
        WHERE notice_id = #{id}
    </select>

        <!--3. 공지사항 등록 -->
    <insert id="insert" parameterType="com.example.shoppingmall.notice.domain.Notice">
        INSERT INTO notice (
            admin_id,
            title,
            content,
            view_count,
            status,
            is_pinned,
            created_at,
            updated_at
        ) VALUES (
            #{adminId},
            #{title},
            #{content},
            #{viewCount},
            #{status},
            #{isPinned},
            #{createdAt},
            #{updatedAt}
        )
    </insert>

        <!--4. 공지사항 수정 -->
    <update id="update" parameterType="com.example.shoppingmall.notice.domain.Notice">
        UPDATE notice
        SET
        title = #{title},
        content = #{content},
        status = #{status},
        is_pinned = #{isPinned},
        updated_at = #{updatedAt}
        WHERE notice_id = #{noticeId}
    </update>

        <!--5. 공지사항 삭제 -->
    <delete id="delete" parameterType="long">
        DELETE FROM notice
        WHERE notice_id = #{id}
    </delete>

    </mapper>





